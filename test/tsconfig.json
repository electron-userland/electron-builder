{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2017",
    "noImplicitAny": true,
    "outDir": "out",
    "newLine": "LF",
    "noEmitOnError": true,
    "inlineSources": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "files": [
    "../node_modules/@types/jest/index.d.ts",
    "../node_modules/fs-extra-p/index.d.ts",
    "../node_modules/bluebird-lst/index.d.ts",
    "../node_modules/electron-osx-sign/index.d.ts",
    "../node_modules/read-config-file/out/read-config-file.d.ts"
  ],
  "include": [
    "../typings/*.d.ts",
    "typings/*.d.ts",
    "src/**/*.ts",
    "../packages/*/out/*.d.ts"
  ],
  "exclude": [
    "../typings/electron.d.ts"
  ]
}
