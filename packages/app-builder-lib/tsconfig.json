{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "out",
    "rootDir": ".",
    "resolveJsonModule": true
  },
  "jsdoc": {
    "out": "../../scripts/jsdoc/out/builder-lib",
    "examples": "../../scripts/jsdoc/examples",
    "access": "public"
  },
  "references": [
    {
      "path": "../builder-util"
    },
    {
      "path": "../builder-util-runtime"
    },
    {
      "path": "../electron-publish"
    }
  ],
  "include": [
    "./package.json",
    "src/**/*.ts",
    "../../typings/*.d.ts"
  ],
  "exclude": [
    "../../typings/electron.d.ts"
  ]
}